@model AnigramsNotebook.EF.NBNote

<div class="mdl-grid demo-content">
    <div class="demo-charts demo-cards mdl-color--white mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col">
        <div class="mdl-card__title mdl-color-text--white mdl-color--lime">
            <i class="material-icons" role="presentation">style</i>
            <h2 class="mdl-card__title-text">@Model.Name</h2>
            @if (!Model.IsActive)
            {
                <i class="material-icons" role="presentation" style="font-size:20px;margin-left:8px;" id="objHdn">lock_outline</i>
                <div class="mdl-tooltip mdl-tooltip--large mdl-tooltip--right" for="objHdn">
                    Hidden
                </div>
            }
        </div>
        <div class="mdl-card__supporting-text">
            <div class="notes-description">@Html.Raw(Model.Description)</div>
            <span class="timestamp">@string.Format("Updated {0:g}", Model.LastModifiedOn)</span>
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a href="@Url.Action("Edit", "Notes", new { id = Model.NBNoteId, projectId = ViewBag.ProjectId, showHidden = ViewBag.ShowHidden })" class="mdl-button mdl-js-button mdl-js-ripple-effect">
                Make Changes
            </a>
            @if (Model.ObjectId != null)
            {
                <a href="@Url.Action("Details", ViewBag.CurrentCategory.CategoryName, new { id = Model.ObjectId, projectId = ViewBag.ProjectId, showHidden = ViewBag.ShowHidden })" class="mdl-button mdl-js-button mdl-js-ripple-effect">
                    View Related
                </a>
            }
            else
            {
                <a href="@Url.Action("Index", ViewBag.CurrentCategory.CategoryName, new { projectId = ViewBag.ProjectId, showHidden = ViewBag.ShowHidden })" class="mdl-button mdl-js-button mdl-js-ripple-effect">
                    View Related
                </a>
            }
        </div>
    </div>
</div>