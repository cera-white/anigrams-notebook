@model AnigramsNotebookV2.Models.RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="mdl-grid demo-content">
        <div class="demo-charts demo-cards mdl-color--white mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col">
            <div class="mdl-card__title mdl-color-text--white mdl-color--black">
                <i class="material-icons" role="presentation">account_circle</i>
                <h2 class="mdl-card__title-text">Register</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-card__supporting-text-scroll">
                @Html.ValidationSummary(true, "", new { @class = "" })

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.TextBoxFor(m => m.Email, new { @class = "mdl-textfield__input" })
                    <label class="mdl-textfield__label" for="email">Email</label>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "mdl-textfield__error" })
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.PasswordFor(m => m.Password, new { @class = "mdl-textfield__input" })
                    <label class="mdl-textfield__label" for="password">Password</label>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "mdl-textfield__error" })
                </div>

                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "mdl-textfield__input" })
                    <label class="mdl-textfield__label" for="confirmPassword">Confirm Password</label>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "mdl-textfield__error" })
                </div>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <button type="submit" class="mdl-button mdl-js-button mdl-js-ripple-effect">
                    Register
                </button>
            </div>
        </div>
    </div>
}

