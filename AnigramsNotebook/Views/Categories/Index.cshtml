@model IEnumerable<AnigramsNotebook.EF.NBCategory>

<div class="mdl-grid demo-content">
    <div class="demo-updates demo-charts demo-cards mdl-color--white mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col">
        <div class="mdl-card__title mdl-color-text--white mdl-color--black">
            <i class="material-icons" role="presentation">equalizer</i>
            <h2 class="mdl-card__title-text">Categories</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <ul class="demo-list-two mdl-list">
                @foreach (var item in Model)
                {
                    <li class="mdl-list__item mdl-list__item--two-line">
                        <a class="mdl-list__item-primary-content" href="@Url.Action("Edit", "Categories", new { id = item.NBCategoryId, projectId = ViewBag.ProjectId, showHidden = ViewBag.ShowHidden })">
                            <i class="material-icons mdl-list__item-avatar" style="background-color:transparent;color:@item.Color">@item.IconName</i>
                            <span>@item.CategoryName</span>
                            <span class="mdl-list__item-sub-title">@string.Format("Updated {0:g}", item.LastModifiedOn)</span>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a href="@Url.Action("Create", "Categories", new { projectId = ViewBag.ProjectId, showHidden = ViewBag.ShowHidden })" class="mdl-button mdl-js-button mdl-js-ripple-effect">Add Another</a>
        </div>
    </div>
</div>
