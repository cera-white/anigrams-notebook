@model IEnumerable<AnigramsNotebook.EF.NBResource>

<div class="mdl-grid demo-content">
    <div class="demo-updates demo-charts demo-cards mdl-color--white mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col">
        <div class="mdl-card__title mdl-color--deep-orange">
            <i class="material-icons" role="presentation">bookmark_border</i>
            <h2 class="mdl-card__title-text">Bookmarks</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <ul class="demo-list-two mdl-list">
                @foreach (var item in Model)
                {
                    <li class="mdl-list__item">
                        <a class="mdl-list__item-primary-content" href="@item.Url" target="_blank">
                            <i class="material-icons mdl-list__item-icon" style="color:@item.NBCategory.Color">@item.NBCategory.IconName</i>
                            <span>@item.DisplayName</span>
                        </a>
                        <span class="mdl-list__item-secondary-content mdl-color-text--grey-600">
                            <a href="@Url.Action("Edit", "Resources", new { id = item.NBResourceId, projectId = ViewBag.ProjectId, showHidden = ViewBag.ShowHidden })" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon mdl-list__item-secondary-action">
                                <i class="material-icons">mode_edit</i>
                            </a>
                        </span>
                    </li>
                }
            </ul>

        </div>
        <div class="mdl-card__actions mdl-card--border">
            <a href="@Url.Action("Create", "Resources", new { projectId = ViewBag.ProjectId, showHidden = ViewBag.ShowHidden })" class="mdl-button mdl-js-button mdl-js-ripple-effect">Add Another</a>
        </div>
    </div>
</div>